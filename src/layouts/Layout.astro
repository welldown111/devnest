---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="zh">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} Â· devnest</title>
    <style>
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
      :root {
        --bg: #0f0f0f;
        --surface: #1a1a1a;
        --border: #2a2a2a;
        --text: #e8e8e8;
        --muted: #888;
        --accent: #7c6af7;
      }
      body {
        background: var(--bg);
        color: var(--text);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main {
        max-width: 860px;
        width: 100%;
        margin: 0 auto;
        padding: 2rem 1.5rem;
        flex: 1;
      }
    </style>
  </head>
  <body>
    <slot name="nav" />
    <main>
      <slot />
    </main>
  </body>
</html>
